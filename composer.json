{
  "name": "tourze/doctrine-helper",
  "description": "Doctrine Helper",
  "type": "library",
  "require": {
    "php": "^8.1",
    "doctrine/orm": "^2.20 || ^3.0",
    "doctrine/common": "^3.5"
  },
  "license": "MIT",
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Tourze\\DoctrineHelper\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tourze\\DoctrineHelper\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src -l 1"
  }
}